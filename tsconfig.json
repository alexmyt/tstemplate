{
  "display": "Node 16",
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./dist",
    "sourceMap": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2021",
    "lib": [
      "ES2021"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": false,
    "declaration": true,
    "declarationDir": "./dist/types/",
    //"baseUrl": "../../",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": [
    "./packages/*/src",
    "./packages/*/__tests__",
    "./test",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "ts-node": {
    "transpileOnly": true,
    "files": true
  }
}